<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:styles="clr-namespace:HardwareRetroAchievements.Styles">
    <AlternationConverter x:Key="{x:Static styles:Keys.AlternateBackgroundConverterKey}">
        <SolidColorBrush Color="{DynamicResource {x:Static styles:Keys.ControlVeryLightColorKey}}"/>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}" />
    </AlternationConverter>
</ResourceDictionary>