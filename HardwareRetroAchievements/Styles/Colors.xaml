<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:styles="clr-namespace:HardwareRetroAchievements.Styles">

    <Color x:Key="{x:Static SystemColors.WindowColorKey}">#1A1A1A</Color>
    <Color x:Key="{x:Static SystemColors.ControlTextColorKey}">#2C97FA</Color>
    <Color x:Key="{x:Static SystemColors.ControlLightColorKey}">#292929</Color>

    <Color x:Key="{x:Static styles:Keys.ControlVeryLightColorKey}">#323232</Color>
    <Color x:Key="{x:Static styles:Keys.AltTextColorKey}">#CC9900</Color>

    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" />
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="{DynamicResource {x:Static SystemColors.ControlTextColorKey}}" />
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="{DynamicResource {x:Static SystemColors.ControlTextColorKey}}" />
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlLightBrushKey}" Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}" />

    <SolidColorBrush x:Key="{x:Static styles:Keys.AltTextBrushKey}" Color="{DynamicResource {x:Static styles:Keys.AltTextColorKey}}" />

</ResourceDictionary>